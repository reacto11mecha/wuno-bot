{
  "name": "wuno-bot",
  "version": "1.0.0",
  "description": "Bot whatsapp yang berguna untuk bermain UNO",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "nodemon src/index.ts",
    "start": "node .",
    "build": "tsc",
    "build:doc": "typedoc",
    "build:all": "tsc && typedoc",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "format": "prettier -w ./src ./test",
    "lint": "eslint ./src ./test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reacto11mecha/wuno-bot.git"
  },
  "author": "Ezra Khairan Permana",
  "license": "MIT",
  "keywords": [
    "typescript",
    "uno",
    "whatsapp-bot"
  ],
  "bugs": {
    "url": "https://github.com/reacto11mecha/wuno-bot/issues"
  },
  "homepage": "https://github.com/reacto11mecha/wuno-bot#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^28.1.6",
    "@types/luxon": "^3.0.0",
    "@types/node": "^18.6.4",
    "@types/sharp": "^0.30.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10",
    "typedoc-plugin-missing-exports": "^0.23.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@open-wa/wa-automate": "^4.47.0",
    "@typegoose/typegoose": "^9.9.0",
    "dotenv": "^16.0.1",
    "libphonenumber-js": "^1.10.11",
    "luxon": "^3.0.1",
    "mongoose": "6.3.5",
    "mongoose-autopopulate": "^0.16.1",
    "nanoid": "3.x.x",
    "node-cache": "^5.1.2",
    "p-limit": "3.1.0",
    "p-queue": "6.x.x",
    "pino": "^8.4.0",
    "pino-pretty": "^8.1.0",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.30.7"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,css,md}": "prettier --write"
  }
}
